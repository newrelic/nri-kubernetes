FROM alpine:latest

ADD --chmod=755 bin/nri-kubernetes-linux-amd64-scraper /var/db/newrelic-infra/newrelic-integrations/bin/

# creating the nri-agent user used only in unprivileged mode
RUN addgroup -g 2000 nri-agent && adduser -D -u 1000 -G nri-agent nri-agent

ENTRYPOINT ["/var/db/newrelic-infra/newrelic-integrations/bin/nri-kubernetes-linux-amd64-scraper"]

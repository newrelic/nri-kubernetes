ARG WINDOWS_VERSION=2019

FROM mcr.microsoft.com/windows/servercore:ltsc${WINDOWS_VERSION}
SHELL ["powershell", "-Command", "$ErrorActionPreference = 'Stop'; $ProgressPreference = 'SilentlyContinue';"]

# Downloaded from https://download.newrelic.com/infrastructure_agent/windows/newrelic-infra.msi in the github action workflow
Add newrelic-infra.msi .

# this installs the infra agent
RUN Start-Process msiexec.exe -ArgumentList '/i', 'C:\\newrelic-infra.msi', '/quiet', '/norestart' -NoNewWindow -Wait
RUN Remove-Item 'C:\\newrelic-infra.msi'

# Service is not started by default
RUN Set-Service -Name 'newrelic-infra' -StartupType disabled

# we use this to start the agent, and to get the output from its log file
COPY start.ps1 C:\\start.ps1
ENTRYPOINT ["powershell", "C:\\start.ps1"]

ENV NRIA_IS_CONTAINERIZED true
ENV NRIA_OVERRIDE_HOST_ROOT ""
ENV NRIA_IS_SECURE_FORWAD_ONLY true
ENV NRIA_HTTP_SERVER_ENABLED true
ENV NRIA_HTTP_SERVER_PORT 8003
ENV NRIA_LOG_FORWARD true 
